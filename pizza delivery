print("Welcome to Python Pizza Deliveries!")

size = input("What size pizza do you want? S, M or L: ")
bill = 0
if size == "S":
    bill = 15
    print("Small Pizza is $15.")
elif size == "M":
    bill = 20
    print("Medium Pizza is $20.")
elif size == "L":
    bill = 25
    print("Large Pizza is $25.")
else:
    print("You typed incorrect inputs :)")
pepperoni = input("Do you want pepperoni on your pizza? Type y for Yes and n for No")
extra_cheese = input("Do you want extra cheese? Type y for Yes and n for No ")
if pepperoni == "y":
    if size == "S":
        bill += 2
    else:
        bill += 3

        bill += 3
if extra_cheese == "y":
        bill += 1

print(f"Your final bill is {bill}.")
